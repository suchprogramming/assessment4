<h1><%= @band.name %></h1>

<h3>Update <%= @band.name() %> </h3>

<div class="form-group">
  <form action="/bands/<%= @band.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="new_band_name">New Band Name</label>
    <input id="new_band_name" class="form-control" name="new_band_name" type="text" placeholder="New Name">
    <br>
    <button type="submit" class ="btn btn-info">Update</button>
  </div>
</form>
<h4>Select Venues</h4>


<% @venues.each() do |venue| %>
<form role="form">
  <div class="checkbox">
    <label><input type="checkbox" value="<%= venue.id() %>"> <%= venue.name() %> </label>
  </div>
</form>
<% end %>
<form method="post" action="/bands/<%= @band.id() %>">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete <%= @band.name %></button>
</form>
<br>
<a class="btn btn-info" href="/bands" role="button">Band Listing</a>
